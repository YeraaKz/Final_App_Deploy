{% extends 'base.html.twig' %}

{% block title %}{{ 'register.title'|trans }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
    <style>
        label {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            min-width: 300px;
            padding: 0;
            margin: 0;
        }

        .col{
            padding-left: 0;
        }

    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <h5 class="card-header">{{ 'register.header'|trans }}</h5>
                    <div class="card-body">


                        {{ form_errors(registrationForm) }}

                        <div class="form-group">
                            {{ form_label(registrationForm.email, 'register.email'|trans) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(registrationForm.plainPassword, 'register.password'|trans) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">{{ 'register.register_button'|trans }}</button>
                        </div>

                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
