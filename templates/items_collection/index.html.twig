{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ user.email }} Collections</h1>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for collection in collections %}
                <tr>
                    <td><a href="{{ path('app_collection', {id: collection.id}) }}">{{ collection.name }}</a></td>
                    <td>{{ collection.description }}</td>
                    <td>{{ collection.category.name }}</td>
                    <td>
                        <a href="{{ path('app_collection_edit', {id: collection.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        <form action="{{ path('app_collection_delete', {id: collection.id}) }}" method="post" style="display:inline-block;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ collection.id) }}">
                            <button class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this collection?');">Delete</button>
                        </form>
                        <a href="{{ path('app_item_create', {id: collection.id})}}" class="btn btn-primary btn-sm">Add Item</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block title %}

{% endblock %}

